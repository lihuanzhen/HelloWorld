<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.think.helloworld.contentproviderdemo.CPActivity">

    <Button
        android:text="查看联系人"
        android:onClick="viewClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:id="@+id/btnViewContact"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="删除联系人"
        android:onClick="deleteClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/btnDeleteContact"
        android:layout_below="@+id/btnAddContact"
        android:layout_alignStart="@+id/btnUpdateContact" />

    <Button
        android:text="增加联系人"
        android:onClick="addClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/btnAddContact"
        android:layout_below="@+id/btnViewContact"
        android:layout_alignEnd="@+id/btnViewContact" />

    <Button
        android:text="修改联系人"
        android:onClick="updateClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/btnUpdateContact"
        android:layout_below="@+id/btnDeleteContact"
        android:layout_alignStart="@+id/btnAddContact" />
</RelativeLayout>
